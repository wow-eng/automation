<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.DasCMpDao">

    <resultMap type="com.entity.DasCMp" id="DasCMpMap">
        <result property="mpId" column="mp_id" jdbcType="VARCHAR"/>
        <result property="mpNo" column="mp_no" jdbcType="VARCHAR"/>
        <result property="mpName" column="mp_name" jdbcType="VARCHAR"/>
        <result property="switchNo" column="switch_no" jdbcType="VARCHAR"/>
    </resultMap>



    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DasCMpMap">
        select mp_id,mp_no,mp_name,switch_no from das_c_mp
        <where>
            <if test="mpId != null">
                and mp_id = #{mpId}
            </if>
        </where>
    </select>



</mapper>